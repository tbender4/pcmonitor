<p id="notice"><%= notice %></p>

<h1>Relays</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Mac address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relays.each do |relay| %>
      <tr>
        <td><%= relay.name %></td>
        <td><%= relay.mac_address %></td>
        <td><%= link_to 'Show', relay %></td>
        <td><%= link_to 'Edit', edit_relay_path(relay) %></td>
        <td><%= link_to 'Destroy', relay, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Relay', new_relay_path %>
